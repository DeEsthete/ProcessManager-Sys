<Window x:Class="ProcessManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="processesListBox" HorizontalAlignment="Left" Height="355" Margin="10,10,0,0" VerticalAlignment="Top" Width="772"/>
        <Button x:Name="killButton" Content="Kill" HorizontalAlignment="Left" Margin="10,365,0,0" VerticalAlignment="Top" Width="772" Height="44" FontWeight="Bold" FontSize="20" FontFamily="Tahoma" Click="KillButtonClick"/>

    </Grid>
</Window>
